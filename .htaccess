# Protéger les fichiers sensibles (.env, etc.)
<Files .*>
  <IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
  </IfModule>
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
</Files>

# Rediriger toutes les requêtes vers /public sans changer l'URL
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_URI} !^/public
  RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

